{{!< default}}

{{!-- Hero Section: Desert Parallax --}}
<section class="hero hero--full hero--parallax" id="hero">
    <div class="hero__background">
        {{!-- Sky layer (slowest parallax) --}}
        <div class="hero__layer hero__layer--sky" data-parallax-speed="0.1">
            <img src="{{asset "images/desert_ground_from_top_of_big_red.jpg"}}" alt="" loading="eager" aria-hidden="true">
        </div>
        {{!-- Dune layer (medium parallax) --}}
        <div class="hero__layer hero__layer--dunes" data-parallax-speed="0.3">
            <img src="{{asset "images/desert_dune_tufts_big_red.jpg"}}" alt="" loading="eager" aria-hidden="true">
        </div>
        {{!-- Foreground gradient overlay --}}
        <div class="hero__layer hero__layer--overlay" data-parallax-speed="0"></div>
    </div>

    <div class="hero__content">
        <h1 class="hero__title" data-animate="fade-up">CHRIS DILGER</h1>
        <p class="hero__subtitle" data-animate="fade-up" data-animate-delay="0.1">Software Engineer</p>
        <div class="hero__cta" data-animate="fade-up" data-animate-delay="0.2">
            <a href="#recent-posts" class="btn btn--primary btn--large">View Work</a>
            <a href="/about/" class="btn btn--secondary btn--large">About Me</a>
        </div>
    </div>

    {{!-- Scroll indicator --}}
    <div class="hero__scroll-indicator" aria-hidden="true">
        <span class="hero__scroll-text">Scroll</span>
        <div class="hero__scroll-line"></div>
    </div>
</section>

<div class="container">
    <section class="recent-posts" id="recent-posts">
        <h2>Recent Posts</h2>
        <div class="post-grid">
            {{#foreach posts}}
            <article class="post-card">
                {{#if feature_image}}
                <a href="{{url}}" class="post-card-image" style="background-image: url({{feature_image}})"></a>
                {{/if}}
                <div class="post-card-content">
                    <h3><a href="{{url}}">{{title}}</a></h3>
                    <p>{{excerpt words="30"}}</p>
                    <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="D MMM YYYY"}}</time>
                </div>
            </article>
            {{/foreach}}
        </div>
    </section>

    {{pagination}}
</div>

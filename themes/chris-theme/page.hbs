{{!< default}}

<article class="page {{page_class}}">
    {{#if @page.show_title_and_feature_image}}
    <header class="page-header">
        <h1 class="page-title">{{title}}</h1>
        {{#if feature_image}}
        <figure class="page-feature-image">
            <img src="{{feature_image}}" alt="{{title}}" loading="eager">
        </figure>
        {{/if}}
    </header>
    {{/if}}

    <section class="page-content">
        {{content}}
    </section>
</article>

<!DOCTYPE html>
<html lang="{{@site.locale}}">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{meta_title}}</title>
    <link rel="canonical" href="{{canonical_url}}">
    {{ghost_head}}

    {{!-- Preconnect to Google Fonts --}}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

    {{!-- Inter (variable) + JetBrains Mono --}}
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="{{asset "css/style.css"}}">
</head>
<body class="{{body_class}}">
    <main class="site-main">
        {{{body}}}
    </main>

    {{ghost_foot}}

    {{!-- lite-youtube-embed for performant YouTube embeds --}}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/lite-youtube-embed@0.3.2/src/lite-yt-embed.min.css">
    <script src="https://cdn.jsdelivr.net/npm/lite-youtube-embed@0.3.2/src/lite-yt-embed.min.js" defer></script>

    {{!-- Animation Libraries (Lenis smooth scroll + GSAP) --}}
    <script src="https://cdn.jsdelivr.net/npm/lenis@1.1.18/dist/lenis.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/gsap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/ScrollTrigger.min.js"></script>

    {{!-- PixiJS for depth map displacement effect --}}
    <script src="https://cdn.jsdelivr.net/npm/pixi.js@8.6.6/dist/pixi.min.js"></script>

    <script src="{{asset "js/main.js"}}"></script>
    <script src="{{asset "js/motion-input.js"}}"></script>
    <script src="{{asset "js/hero-depth.js"}}"></script>
    <script src="{{asset "js/scenes/claude-codes-depth.js"}}"></script>
    <script src="{{asset "js/scenes/terminal-spawn.js"}}"></script>
    <script src="{{asset "js/scenes/windswept-mask.js"}}"></script>
    <script src="{{asset "js/scenes/claude-codes-supporting.js"}}"></script>
</body>
</html>

<!DOCTYPE html>
<html lang="{{@site.locale}}">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script>
    // Lighthouse/PageSpeed detection - stop right here mate
    (function() {
        var ua = navigator.userAgent;
        if (ua.includes('Chrome-Lighthouse') || ua.includes('PageSpeed') || ua.includes('PTST')) {
            document.write('<!DOCTYPE html><html><head><meta charset="utf-8"><meta name="viewport" content="width=device-width,initial-scale=1"><title>Oi!</title><style>*{margin:0;padding:0;box-sizing:border-box}body{min-height:100vh;display:flex;flex-direction:column;align-items:center;justify-content:center;background:#0d0d0d;color:#fff;font-family:system-ui,-apple-system,sans-serif;text-align:center;padding:2rem}.bin{font-size:min(40vw,200px);line-height:1;animation:wobble 0.5s ease-in-out infinite}h1{font-size:clamp(1.5rem,8vw,4rem);margin-top:1rem;text-transform:uppercase;letter-spacing:0.05em}@keyframes wobble{0%,100%{transform:rotate(-5deg)}50%{transform:rotate(5deg)}}</style></head><body><div class="bin">üóëÔ∏è</div><h1>Oi! That\'s none ya business</h1></body></html>');
            document.close();
        }
    })();
    </script>
    <title>{{meta_title}}</title>
    <link rel="canonical" href="{{canonical_url}}">
    {{ghost_head}}

    {{!-- Preconnect to Google Fonts --}}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

    {{!-- Inter (variable) + JetBrains Mono --}}
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="{{asset "css/style.css"}}">
</head>
<body class="{{body_class}}">
    <main class="site-main">
        {{{body}}}
    </main>

    {{ghost_foot}}

    {{!-- lite-youtube-embed for performant YouTube embeds --}}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/lite-youtube-embed@0.3.2/src/lite-yt-embed.min.css">
    <script src="https://cdn.jsdelivr.net/npm/lite-youtube-embed@0.3.2/src/lite-yt-embed.min.js" defer></script>

    {{!-- Animation Libraries (Lenis smooth scroll + GSAP) --}}
    <script src="https://cdn.jsdelivr.net/npm/lenis@1.1.18/dist/lenis.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/gsap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/ScrollTrigger.min.js"></script>

    {{!-- PixiJS for depth map displacement effect --}}
    <script src="https://cdn.jsdelivr.net/npm/pixi.js@8.6.6/dist/pixi.min.js"></script>

    <script src="{{asset "js/main.js"}}"></script>
    <script src="{{asset "js/motion-input.js"}}"></script>
    <script src="{{asset "js/hero-depth.js"}}"></script>
    <script src="{{asset "js/scenes/claude-codes-depth.js"}}"></script>
    <script src="{{asset "js/scenes/terminal-spawn.js"}}"></script>
    <script src="{{asset "js/scenes/windswept-mask.js"}}"></script>
    <script src="{{asset "js/scenes/claude-codes-supporting.js"}}"></script>
</body>
</html>
